<!DOCTYPE html>
<html>
<head>
  <title>SeuApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <% if user_signed_in? %>
    <%= button_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: false } %>
    <% else %>
      <%= link_to 'Login', new_user_session_path %><br>
      <%= link_to 'Sign Up', new_user_registration_path %>
    <% end %>
  </header>

  <%= yield %>
</body>
</html>
